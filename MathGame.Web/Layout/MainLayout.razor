@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Pelit</MudText>
        </MudDrawerHeader>
        <MudNavLink Href="Math">Math</MudNavLink>
        <MudNavLink Href="quiz">Quiz</MudNavLink>
        <MudNavLink Href="spotify-quiz-player">Spotify Quiz</MudNavLink>
        <MudDivider/>
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Työkalut</MudText>
        </MudDrawerHeader>
        <MudNavLink Href="GenerateQuiz">Quiz generaattori</MudNavLink>
        <MudNavLink Href="csv-quiz-creator">CSV Quiz Creator</MudNavLink>
        <MudDivider/>
        <MudText>test</MudText>
    </MudDrawer>
    <MudMainContent>
        <CascadingValue Value="_isDarkMode" Name="IsDarkMode">
            @Body
        </CascadingValue>
    </MudMainContent>
</MudLayout>

@* Required *@
<MudThemeProvider @ref="_mudThemeProvider" Theme="_theme" @bind-IsDarkMode="@_isDarkMode" />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />


@code {
    bool _drawerOpen = true;
    private MudThemeProvider? _mudThemeProvider;
    private bool _isDarkMode = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

